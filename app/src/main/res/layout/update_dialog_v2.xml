<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/updates_top_wrapper"
        android:gravity="center_horizontal"
        android:textColor="@color/AnyAudioGrey"
        android:text="Better Performance "
        android:id="@+id/newFeatures"
        android:paddingRight="48dp"
        android:paddingLeft="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="14dp"
        android:text="UPDATE"
        android:elevation="4dp"
        android:textColor="@color/White"
        android:id="@+id/updateBtn"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/terms_accept_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="î…Œ"
        android:textColor="@color/AnyAudioPrimaryColor"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/cancelUpdateDialog" />

    <RelativeLayout
        android:id="@+id/updates_top_wrapper"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/updateCaption"
            android:textColor="@color/AnyAudioPrimaryColor"
            android:textSize="24sp"
            android:text="NEW UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/tip"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/updateCaption"
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/explore_text_under_tip"/>

            <TextView
                android:layout_below="@+id/tip"
                android:textColor="@color/AnyAudioBlack"
                android:textSize="16sp"
                android:layout_margin="4dp"
                android:id="@+id/newVersionText"
                android:text="New Version 2.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/newVersionText"
                android:layout_below="@+id/tip"
                android:id="@+id/verticalbar"
                android:layout_width="2dp"
                android:background="@color/AnyAudioPrimaryColor"
                android:layout_height="20dp"/>


        <TextView
            android:layout_below="@+id/tip"
            android:layout_toRightOf="@+id/verticalbar"
            android:textColor="@color/AnyAudioGrey"
            android:textSize="12sp"
            android:layout_margin="6dp"
            android:id="@+id/oldVersionText"
            android:text="Your Version 1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>